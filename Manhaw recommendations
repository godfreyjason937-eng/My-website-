<body>

  <header>
    <h1>ðŸ”¥ Manhwa Recommendations ðŸ”¥</h1>
    <p>Discover the best manhwas to read</p>
  </header>

  <div class="search-box">
    <input type="text" id="search" placeholder="Search manhwa by name or genre...">
  </div>

  <div class="container" id="manhwa-list"></div>

  <script>
    const manhwas = [
      { 
        title: "Solo Leveling", 
        desc: "Weak hunter Sung Jin-Woo gets a chance to level up endlessly.", 
        tags: ["Action", "Fantasy", "Overpowered"]
      },
      { 
        title: "Omniscient Reader", 
        desc: "Kim Dokjaâ€™s world turns into the novel he read for years.", 
        tags: ["Survival", "Fantasy", "Psychological"]
      },
      { 
        title: "Tower of God", 
        desc: "A boy enters the mysterious Tower to find his best friend.", 
        tags: ["Adventure", "Fantasy", "Mystery"]
      },
      { 
        title: "The Breaker", 
        desc: "A bullied student meets a martial arts master.", 
        tags: ["Martial Arts", "Action", "School"]
      },
      { 
        title: "Eleceed", 
        desc: "A kind boy with lightning powers and his talking cat mentor.", 
        tags: ["Action", "Comedy", "Supernatural"]
      },
      { 
        title: "Nano Machine", 
        desc: "A prince gains futuristic nanotech to survive martial arts world.", 
        tags: ["Martial Arts", "Sci-Fi", "Revenge"]
      }
    ];

    const list = document.getElementById("manhwa-list");

    function displayManhwas(data) {
      list.innerHTML = "";
      data.forEach(m => {
        list.innerHTML += `
          <div class="card">
            <h3>${m.title}</h3>
            <p>${m.desc}</p>
            <div>${m.tags.map(tag => `<span class="tag">${tag}</span>`).join("")}</div>
          </div>
        `;
      });
    }

    displayManhwas(manhwas);

    // Search filter
    document.getElementById("search").addEventListener("input", function() {
      const value = this.value.toLowerCase();
      const filtered = manhwas.filter(m => 
        m.title.toLowerCase().includes(value) || 
        m.tags.join(" ").toLowerCase().includes(value)
      );
      displayManhwas(filtered);
    });
  </script>

